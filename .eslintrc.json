{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "always",
        "mjs": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "vue": "never"
      }
    ]
  }
}
